generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nombre    String
  email     String   @unique
  contraseÃ±a String
  habitos   Habito[]
}

model Habito {
  id         String     @id @default(uuid())
  nombre     String
  descripcion String?
  frecuencia Int
  dias       String[]   // ['L', 'M', 'X', 'J']
  usuario    Usuario    @relation(fields: [usuarioId], references: [id])
  usuarioId  String
  historial  Historial[]
}

model Historial {
  id         String   @id @default(uuid())
  fecha      DateTime
  completado Boolean
  habito     Habito   @relation(fields: [habitoId], references: [id])
  habitoId   String

